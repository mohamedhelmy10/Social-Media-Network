<h1> Edit Your Post </h1>
<%= form_with model: [@user, @post, @user.posts.@post.id.to_s).build ] do |form| %>

  <div>
    <%= form.label :caption %></br>
    <%= form.text_area  :caption %> </br>
  </div>

  <div>
    <%= form.label :image %></br>
    <%= form.text_field :image %></br>
  </div>

  <div> 
    <%= form.label :is_public %></br>
    <%= form.text_field :is_public %></br>
  </div></br>

  <div>
    <%= form.submit %>
  </div>
<% end %>