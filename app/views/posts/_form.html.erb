<%= form_with model: [user, user.posts.build ] do |form| %>

    <div>
      <%= form.label :caption %></br>
      <%= form.text_area  :caption %> </br>
    </div>

    <div>
      <%= form.label :image %></br>
      <%= form.text_field :image %></br>
    </div>

    <div> 
      <%= form.label :is_public %></br>
      <%= form.text_field :is_public %></br>
    </div></br>

    <div>
      <%= form.submit %>
    </div>
  <% end %>